.info_item {
    background-color: #fff;
    margin-top: 10rpx;
    padding: 20rpx;
    position: relative;
    margin-right: 20rpx;
}

.info_item .body {
    display: flex;
}

.info_item .body text {
    height: 44rpx;
}

.ye {
    margin-left: 0!important;
}

.info_item .body text:first-child {
    flex: 3;
    text-align: justify;
}

.info_item .body text::after {
    width: 100%;
    display: inline-block;
    content: '';
}

.info_item .body text:last-child {
    flex: 12;
    margin-left: 40rpx;
}

.opt {
    display: flex;
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    /* overflow: hidden; */
}

.opt_text {
    margin-left: 16rpx;
    padding: 0 5rpx;
}

.iconlixian {
    background-color: #999;
    border-radius: 9rpx;
    color: #fff;
}

.iconwarning {
    border: 1px solid #ffae00;
    color: #ffae00;
    border-radius: 9rpx;
}


